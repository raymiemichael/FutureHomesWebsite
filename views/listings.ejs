  <title>Future Homes-Listings</title>

  <!-- Bootstrap core CSS -->
  <link href="/fa17g10/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom fonts for this template -->
  <link href="/fa17g10/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>

  <!-- Plugin CSS -->
  <link href="/fa17g10/vendor/magnific-popup/magnific-popup.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/fa17g10/css/creative.min.css" rel="stylesheet">

</head>
<link rel="shortcut icon fa fa-home" type="image/x-icon" href="img/favicon.png">
<body id="page-top">
<div class="fixed-top">
<div class="navbar navbar-expand-lg navbar-light" id="mainNav2"> Disclaimer: This is not a real website. This is a project for San Francisco State University's Software Engineering class.</div>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light" id="mainNav2">
    <div class="container">
      <a class="navbar-brand" href="/fa17g10/">Future Homes</a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/fa17g10/login">log in</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/fa17g10/signup">sign up</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</div>
  <!-- Page Content -->
  <div class="container">

    <!-- Page Heading -->
    <h1 class="my-4">Search Results
        <h5>your search resulted in <%= listings.length %> listings</h5>
    </h1>

    <% for(var i = 0; i < listings.length; i++ ) { %>
    <div class="row">
      <div class="col-md-7">
        <a href="#">
          <img class="img-fluid rounded mb-3 mb-md-0" src="/fa17g10<%= listings[i].image_path %>" alt="">
        </a>
      </div>
      <div class="col-md-5">
        <h3><%= listings[i].street %>, <%= listings[i].city %>, <%= listings[i].state %> <%= listings[i].zip_code %></h3>
        <p><%= listings[i].square_footage %> square feet</p>
        <p><%= listings[i].bedrooms %> bedrooms</p>
        <p><%= listings[i].bathrooms %> bathrooms</p>
        <p>$<%= listings[i].price %></p>
        <a class="btn btn-primary" href="/fa17g10/details/<%= listings[i].id %>">View Details</a>
      </div>
      </div>
      <hr>
    <% } %>

  </div>
  <!-- /.container -->

  <!-- Bootstrap core JavaScript -->
  <script src="/fa17g10/vendor/jquery/jquery.min.js"></script>
  <script src="/fa17g10/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Plugin JavaScript -->
  <script src="/fa17g10/vendor/jquery-easing/jquery.easing.min.js"></script>
  <script src="/fa17g10/vendor/scrollreveal/scrollreveal.min.js"></script>
  <script src="/fa17g10/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="/fa17g10/js/creative.min.js"></script>

</body>

</html>
